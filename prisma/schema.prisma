model Order {
  id             Int    @id @default(autoincrement())
  comment        String?
  deliveryStatus String?
  payment        String?
  // delivery       Delivery?
  totalPrice     Float?
  contactDataId Int?
  contactData   ContactData?    @relation(fields: [contactDataId], references: [id])
}

model DescriptionBlock {
  id          Int    @id @default(autoincrement())
  name        String?
  description String?
  title       String?
  second      String?
  count       Int?
  media       String?
  price       Float?
  productId Int?
  product   Product?    @relation(fields: [productId], references: [id])
}

model MediaDescriptionBlock {
  id          Int    @id @default(autoincrement())
  header      String?
  description String?
  media       String?
  productId Int?
  product   Product?    @relation(fields: [productId], references: [id])
}

model CharacteristicsDescriptionBlock {
  id             Int    @id @default(autoincrement())
  header         String?
  description    String?
  characteristics String?
  media          String?
  productId Int?
  product   Product?    @relation(fields: [productId], references: [id])
}

model ContactData {
  id          Int               @id @default(autoincrement())
  firstName   String
  secondName  String?
  patronymic  String?
  birthDate   String?
  phoneNumber String?
  email       String?

  user        User?
  orders      Order[]
}

model ProductOnOrder {
  id         Int          @id @default(autoincrement())
  count      Int

  productId  Int
  product    Product      @relation(fields: [productId], references: [id])

  // contactId  Int
  // contact    ContactData  @relation(fields: [contactId], references: [id])

  deliveryId Int?
  delivery   Delivery?    @relation(fields: [deliveryId], references: [id])
}

model Product {
  id          Int                 @id @default(autoincrement())
  name        String
  price       Float
  discount    Float?
  media       String?
  description String?
  count       Int
  characteristics CharacteristicsDescriptionBlock[]
  mediaBlock MediaDescriptionBlock[]
  descriptionBlock DescriptionBlock[]
  orders      ProductOnOrder[]
}

model Delivery {
  id             Int     @id @default(autoincrement())
  area           String
  houseNumber    String
  street         String
  flatNumber     String?
  entranceNumber String?

  orders ProductOnOrder[]
  user   User?
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String
}

