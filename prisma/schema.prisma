generator client {
  provider = "prisma-client-js"
  engineType = "binary"
  outputType = "esm"
  output   = "../src/generated/prisma"
} 



datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
 id            Int          @id @default(autoincrement())
 name          String
 email         String       @unique
 password      String

 contactDataId Int?         @unique
 contactData   ContactData? @relation(fields: [contactDataId], references: [id])

 addressId     Int?         @unique
 address       Delivery?    @relation(fields: [addressId], references: [id])
}

