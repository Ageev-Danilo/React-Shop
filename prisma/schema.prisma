generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  name          String
  email         String       @unique
  password      String

  contactDataId Int?         @unique
  contactData   ContactData? @relation(fields: [contactDataId], references: [id])

  addressId     Int?         @unique
  address       Delivery?    @relation(fields: [addressId], references: [id])
}

model ContactData {
  id          Int               @id @default(autoincrement())
  firstName   String
  secondName  String?
  patronymic  String?
  birthDate   DateTime?
  phoneNumber String?
  email       String?

  user        User?
  orders      ProductOnOrder[]
}

model ProductOnOrder {
  id         Int          @id @default(autoincrement())
  count      Int

  productId  Int
  product    Product      @relation(fields: [productId], references: [id])

  contactId  Int
  contact    ContactData  @relation(fields: [contactId], references: [id])

  deliveryId Int?
  delivery   Delivery?    @relation(fields: [deliveryId], references: [id])
}

model Product {
  id          Int                 @id @default(autoincrement())
  name        String
  price       Float
  discount    Float?
  media       String?
  description String?
  count       Int

  orders      ProductOnOrder[]
}

model Delivery {
  id             Int     @id @default(autoincrement())
  area           String
  houseNumber    String
  street         String
  flatNumber     String?
  entranceNumber String?

  orders ProductOnOrder[]
  user   User?
}